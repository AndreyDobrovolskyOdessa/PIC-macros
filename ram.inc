;	RAM parameters for various microcontrollers.


	IFDEF __10F200

_RAMBOTTOM0	set 0x10
_RAMTOP0	equ 0x20

_OVRRAMBOTTOM	set 0x20
_OVRRAMTOP	equ 0x20

_RAMBOTTOM1	set 0xf0
_RAMTOP1	equ 0xf0

_RAMBOTTOM2	set 0x170
_RAMTOP2	equ 0x170

_RAMBOTTOM3	set 0x1f0
_RAMTOP3	equ 0x1f0

	ENDIF


	IFDEF __12F683

_RAMBOTTOM0	set 0x20
