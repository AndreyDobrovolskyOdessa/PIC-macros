	IFDEF __16F887

_RAMBOTTOM0	set 0x20
_RAMTOP0	equ 0x70

_OVRRAMBOTTOM	set 0x70
_OVRRAMTOP	equ 0x80

_RAMBOTTOM1	set 0xa0
_RAMTOP1	equ 0xf0

_RAMBOTTOM2	set 0x110
_RAMTOP2	equ 0x170

_RAMBOTTOM3	set 0x190
_RAMTOP3	equ 0x1f0

	ENDIF

_BANK0FREE	set _RAMTOP0-_RAMBOTTOM0
_BANK1FREE	set _RAMTOP1-_RAMBOTTOM1
_BANK2FREE	set _RAMTOP2-_RAMBOTTOM2
_BANK3FREE	set _RAMTOP3-_RAMBOTTOM3

_RAMBANKTOTAL	equ 4

_RAMBANKNUM	set 1

i	= 1

	WHILE (i<_RAMBANKTOTAL)
	IF (_BANK#v(i)FREE>0)
_RAMBANKNUM	set (i+1)
	ENDIF
i	= i+1
	ENDW

