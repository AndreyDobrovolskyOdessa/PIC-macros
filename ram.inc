_OVRRAMBOTTOM	set 0x70
_OVRRAMTOP	equ 0x80

_RAMBOTTOM1	set 0xa0
_RAMTOP1	equ 0xc0

_RAMBOTTOM2	set 0x170
_RAMTOP2	equ 0x170

_RAMBOTTOM3	set 0x1f0
